<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="#e9fbe0"
    >

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:inputType="number"
        android:gravity="center|right"
        android:textColor="@color/black"
        android:textSize="40dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/bc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bper"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/del"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="DE"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bdiv"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#85e762"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/b07"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b08"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b09"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bmul"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:text="X"
            android:textColor="#85e762"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/b04"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b05"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b06"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bminus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#85e762"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/b01"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b02"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b03"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bplus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#85e762"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/b00"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/b0"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bdot"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

        <Button
            android:id="@+id/bres"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:text="="
            android:textColor="#85e762"
            android:textSize="30dp"
            app:backgroundTint="#e9fbe0"></Button>

    </LinearLayout>


</LinearLayout>